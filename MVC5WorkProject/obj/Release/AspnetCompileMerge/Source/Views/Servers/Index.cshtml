@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/AngularLoadingBar/loading-bar.min.js"></script>
<link href="~/Content/AngularLoadingBar/loading-bar.min.css" rel="stylesheet" />
@*<link href="~/Content/FontAwesome/font-awesome.min.css" rel="stylesheet" />*@

@*<script src="~/Scripts/Ladda-master/dist/spin.min.js"></script>
    <script src="~/Scripts/Ladda-master/dist/ladda.min.js"></script>
    <script src="~/Scripts/Ladda-master/dist/ladda.jquery.min.js"></script>
    <link href="~/Content/Ladda/ladda-themeless.min.css" rel="stylesheet">*@
<br />

<div class="container" ng-app="serversApp" ng-controller="ServersCtrl">
    <div class="row">
        <div class="col-md-12">
            <p>
                @Html.ActionLink("Add with MVC", "Create", null, new { @class = "btn btn-warning" })
            </p>
            <a ng-click="showform(true)" class="btn btn-primary">Add with AngularJS</a>

            <br />
            <br />

            <table class="table table-condensed table-hover table-bordered">
                <thead>
                    <tr style="background-color: #ffd800">
                        <th style="text-align: center">Status</th>
                        <th style="text-align: center">Type</th>
                        <th style="text-align: center">Name</th>
                        <th style="text-align: center">Password</th>
                        <th style="text-align: center">Ip1</th>
                        <th style="text-align: center">Ip2</th>
                        <th style="text-align: center">Ip3</th>
                        <th style="text-align: center">Details</th>
                        <th style="text-align: center">Delete</th>
                    </tr>
                </thead>

                <tbody>
                    <tr ng-repeat="server in model.Servers">
                        <td>{{server.EnumStatus}}</td>
                        <td>{{server.EnumType}}</td>
                        <td>{{server.Name}}</td>
                        <td>{{server.Password}}</td>
                        <td>{{server.Ip1}}</td>
                        <td>{{server.Ip2}}</td>
                        <td>{{server.Ip3}}</td>
                        <td>{{server.Details}}</td>
                        <td style="text-align: center">
                            <a href="@Url.Action("Delete", "Servers")/?id = {{Server.ServerId}}">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>

                    </tr>
                    @*Hide or show the HTML*@
                    <tr ng-if="model.Servers.lenght == 0">
                        <td colspan="4" class="text-center">No servers to display</td>
                    </tr>

                    <tr ng-if="states.showform">
                        <td>
                            <input type="text" class="form-control" placeholder="Status" ng-model="new.Server.EnumStatus" />
                        </td>
                        <td>
                            <input type="text" class="form-control" placeholder="Type" ng-model="new.Server.EnumType" />
                        </td>
                        <td>
                            <input type="text" class="form-control" placeholder="Name" ng-model="new.Server.Name" />
                        </td>
                        <td>
                            <input type="text" class="form-control" placeholder="Password" ng-model="new.Server.Password" />
                        </td>
                        <td>
                            <input type="text" class="form-control" placeholder="Ip1" ng-model="new.Server.Ip1" />
                        </td>
                        <td>
                            <input type="text" class="form-control" placeholder="Ip2" ng-model="new.Server.Ip2" />
                        </td>
                        <td>
                            <input type="text" class="form-control" placeholder="Ip3" ng-model="new.Server.Ip3" />
                        </td>
                        <td>
                            <input type="text" class="form-control" placeholder="Details" ng-model="new.Server.Details" />
                        </td>
                    </tr>
                </tbody>
            </table>
            <div ng-if="states.showform">
                @*loading-button (in app.js); the ladda details are found on: http://lab.hakim.se/ladda/*@
                <button ng-click="addServer()" type="button" class="btn btn-primary"
                        @*loading-button*@
                        @*data-style="expand-left"*@
                        @*spin="states.isAdding"*@
                        @*spin="states.isAdding"*@>
                    Add
                </button>

                <button type="button" ng-click="showform(false)" class="btn btn-default">Cancel</button>
            </div>
        </div>
    </div>
</div>

