<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Home</title>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/AngularCustom")

    @Styles.Render("~/Content/css")

    @RenderSection("scripts", required: false)
  
    @*jPushMenu*@
    <link href="~/Scripts/jPushMenu-master/css/jPushMenu.css" rel="stylesheet" />
    <script src="~/Scripts/jPushMenu-master/js/jPushMenu.js"></script>
    <link href="~/Scripts/jPushMenu-master/css/demo.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-fixed-top ">@*navbar-inverse *@
        <div style="background-color: #ffffff" class="container" >
            <div class="navbar-header ">
                <br/>
                <button class="btn btn-danger toggle-menu menu-left push-body ">Menu</button>
               
                @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Servers", "Index", "Servers")</li>
                    <li>@Html.ActionLink("IpMap", "IpMap", "IpMap")</li>
                    <li>@Html.ActionLink("Calendar", "Calendar", "Calendar")</li>
                    <li>@Html.ActionLink("jQueryui", "jQueryui", "JQueryAjax")</li>
                    <li>@Html.ActionLink("LearnAngularJs", "LearnAngularJs", "JQueryAjax")</li>
                    <li>@Html.ActionLink("Drag & Drop", "DragAndDrop", "DragAndDrop")</li>
                    <li>@Html.ActionLink("3DMenu", "Index", "Bold")</li>
                </ul>

                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>

    <div class="container body-content">
        <br />
        <br/>
        <br/>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - By Cris</p>
        </footer>
    </div>
</body>
</html>


<!--call jPushMenu, required-->
<script>
    jQuery(document).ready(function ($) {
        $('.toggle-menu').jPushMenu();
    });
</script>